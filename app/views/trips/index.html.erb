<div class="d-flex justify-content-center bg-white mb-3 flex-grow-1">
  <div class="w-75 d-flex flex-column">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="display-3 my-4">Trips</h1>
      <%= link_to 'New Trip', new_trip_path, 
        class: "btn btn-primary my-2 text-white",
        style: "height: 40px;" %>
    </div>

    <h4 class="card-subtitle my-2 mx-5">Upcoming Plans</h4>
    <% if @trips.any? %>
      <div class="d-flex flex-wrap justify-content-center"> 
        <% @trips.each do |trip| %>
            <%= render partial: 'trip_card', locals: { trip: trip } %>
        <% end %>
      </div>
    <% else %>
      <p>No trips have been created yet.</p>
    <% end %>
  </div>
</div>

