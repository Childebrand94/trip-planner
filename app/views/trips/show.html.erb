<div class="container pb-2 mt-3" style="max-width: 720px;">

  <%= render partial: 'shared/trip_itinerary_nav' %>

  <section class="my-2 p-3  bg-light card rounded-4">
    <h4 class="display-5">Notes</h4>
    <small class="text-secondary">
      Create a note to remind members of important details
    </small>
    <%= render partial: 'notes/form' %>
    <div class="border-top border-secondary mb-3">
      <h5 class="card-subtitle my-4"> All Notes</h5>
      <div class="list-group ">
        <% if @all_notes.any? %> 
          <% @all_notes.each do |note| %>
            <%= render partial: "notes/note_card", locals: { note: note } %>
          <% end %>
        <% else %>
          <div><p class="ms-3">No notes yet.</p></div>
        <% end %>
      </div>
    </div>
  </section>

  <div class="itinerary-footer">
    <%= render partial: 'shared/trip_itinerary_footer' %>
  </div>
</div>
