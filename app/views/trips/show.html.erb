<div class="container pb-2 mt-3 min-vh-100" style="max-width: 720px;">

  <%= render partial: 'shared/trip_itinerary_nav' %>

  <section class="my-2 p-3  bg-light card rounded-4">
    <h4 class="display-5">Notes</h4>
    <%= render partial: 'notes/form' %>
    <div class="list-group">
      <% if @all_notes.any? %> 
        <% @all_notes.each do |note| %>
          <%= render partial: "notes/note_card", locals: { note: note } %>
        <% end %>
      <% else %>
        <div class="card">
          <h5 class="lead p-2"> No notes yet...</h5>
        </div>
      <% end %>
    </div>
  </section>

  <div class="itinerary-footer">
    <%= render partial: 'shared/trip_itinerary_footer' %>
  </div>
</div>
