<div class="main-content min-vh-100 bg-body-tertiary">
  <div class="card mb-4 max-w-2xl">
    <div class="card-body text-center bg-light">
      <%= image_tag "male-avatar.png", style: "width: 150px;", class: "rounded-circle img-fluid mx-5" %>
      <h5 class="my-3"><%= @user.display_name  %></h5>
      <p class="text-muted mb-1"><%= @user.email  %></p>
      <div class="d-flex justify-content-center flex-column mb-2">
        <%= link_to "Edit Info", edit_user_path(@user),
          class: "btn btn-primary my-1"%> 
        <%= link_to "Change Password", user_edit_password_path(@user),
          class: "btn btn-outline-primary my-1"%> 
        <%= button_to "Delete Account", @user, method: :delete,
          data: { turbo_confirm: "Are you sure?" },
          class: "btn btn-outline-danger my-1 d-block w-100" %>
    </div>
  </div>
</div>
