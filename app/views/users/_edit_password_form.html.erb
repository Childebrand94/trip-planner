<%= bootstrap_form_with(model: user, url: user_update_password_path(user), inline_error: false, label_errors: true) do |f| %> 
  <%= f.alert_message "Please fix the errors below." %>
  <div class="container my-2">
    <%= f.password_field :old_password , label_as_placeholder: true, 
      required: true %>
    <%= f.password_field :password, label_as_placeholder: true, required: true%>
    <%= f.password_field :password_confirmation, label_as_placeholder: true, 
      required: true, label: "Confirm Password" %>
    <%= f.submit  'Update', class: "btn btn-primary" %>
  </div>
<% end %>
