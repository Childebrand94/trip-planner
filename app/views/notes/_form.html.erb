<%= bootstrap_form_with(model: [ @trip, @note], 
                        inline_error: false,
                        label_errors:true) do |f| %>

  <%= f.alert_message "Please fix the errors below." %>

  <div class="my-2">
    <%= f.text_field :body, label_as_placeholder: true, required: true %>

    <% if controller.action_name == 'edit' %>
      <%= f.check_box :completed %>
    <% end %>

    <%= f.submit (controller.action_name == 'edit' ? 'Update' : 'Create'), 
      class: "btn btn-secondary" %>

      <%= link_to 'Back', trip_path(@trip), class: "btn btn-secondary" %>
  </div>

<% end %> 
